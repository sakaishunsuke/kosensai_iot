<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.iotmanager.ActivityTop"
    tools:showIn="@layout/app_bar_activity_top">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imgButTopActivityLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_top_icon_margin"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/clear"
                    android:scaleType="fitCenter"
                    android:src="@drawable/door_open" />

                <ProgressBar
                    android:id="@+id/progressBarTopActivityDoor"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgButTopActivityLight"
                    android:layout_alignEnd="@+id/imgButTopActivityLight"
                    android:layout_alignStart="@+id/imgButTopActivityLight"
                    android:layout_alignTop="@+id/imgButTopActivityLight"
                    android:layout_weight="1"
                    android:color="@color/colorPrimaryDark"
                    android:indeterminate="false"
                    android:paddingBottom="40dp"
                    android:paddingTop="10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textViewTopActivityDoor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgButTopActivityLight"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:text="更新中"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imgButTopActivityLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_top_icon_margin"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/clear"
                    android:scaleType="fitCenter"
                    android:src="@drawable/curtain_open" />

                <ProgressBar
                    android:id="@+id/progressBarTopActivityCurtain"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgButTopActivityLight"
                    android:layout_alignEnd="@+id/imgButTopActivityLight"
                    android:layout_alignStart="@+id/imgButTopActivityLight"
                    android:layout_alignTop="@+id/imgButTopActivityLight"
                    android:layout_weight="1"
                    android:color="@color/colorPrimaryDark"
                    android:indeterminate="false"
                    android:paddingBottom="40dp"
                    android:paddingTop="10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textViewTopActivityCurtain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgButTopActivityLight"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:text="更新中"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/imgButTopActivityRefrigerator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_top_icon_margin"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/clear"
                android:scaleType="fitCenter"
                android:src="@drawable/refrigerator_button" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imgButTopActivityLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_top_icon_margin"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@color/clear"
                    android:scaleType="fitCenter"
                    android:src="@drawable/light_on" />

                <ProgressBar
                    android:id="@+id/progressBarTopActivityLight"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgButTopActivityLight"
                    android:layout_alignEnd="@+id/imgButTopActivityLight"
                    android:layout_alignStart="@+id/imgButTopActivityLight"
                    android:layout_alignTop="@+id/imgButTopActivityLight"
                    android:layout_weight="1"
                    android:color="@color/colorPrimaryDark"
                    android:indeterminate="false"
                    android:paddingBottom="40dp"
                    android:paddingTop="10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textViewTopActivityLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgButTopActivityLight"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:text="更新中"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout3"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/imgButTopActivityMyfavorite01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_top_icon_margin"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/clear"
                android:scaleType="fitCenter"
                android:src="@drawable/myfavorite_button01" />

            <ImageButton
                android:id="@+id/imgButTopActivityMyfavorite02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_top_icon_margin"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/clear"
                android:saveEnabled="false"
                android:scaleType="fitCenter"
                android:src="@drawable/myfavorite_button02" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
